extends layout

block content
    br
    br
    
    h1(style="text-align:center")=title
    h2(style="text-align:center")=mensaje
    
    br
    br
    br
    .row
        .col-md-2.form-group(style="float:left; ")
          img(src="/images/change.svg", alt="phone", width="250%")
        .col-md-2
        .col-md-8(style="padding-left:40px")
            .card
                .card-body
                    form.form-inline.mt-2.mt-md-0(action='/changeObject' method='post' role='form' style="margin-left:40px;")
                        p.text-center.mt-sm-2 Ingrese el nombre de Objeto a modificar
                        input.form-control.mr-sm-2.ml-sm-2(type='text' placeholder='Nombre del Objeto' aria-label='Buscar' name='objectid')
                        button.btn.btn-primary.text-center(type='submit') Buscar
                    form(action='' method='post' role='form')
                        .row
                            .col
                                .form-group
                                    label(for='label') Objeto
                                    input#label.form-control(type='text' value=`${label}` name='label' placeholder='Ingrese el nombre del objeto')
                            .col
                                .form-group
                                    label(for='sound') URL Sonido
                                    input#sound.form-control(type='text' value=`${sound}` name='sound' placeholder='Ingrese el url del sonido' readonly="")
                            .col
                                .form-group
                                    label(for='document') Documento
                                    input#document.form-control(type='text' value=`${document}` name='document' placeholder='Codigo del documento' readonly ='')
                        .text-center
                            button.btn.btn-primary.text-center(type='submit') Modificar Objeto